{
  "name": "@utterance/core",
  "version": "0.0.1",
  "description": "Client-side semantic endpointing. Know when they're done talking.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "models"
  ],
  "scripts": {
    "start": "npm run build && run-p dev serve test:watch",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
    "serve": "serve . -l 3000",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "voice",
    "speech",
    "endpointing",
    "vad",
    "turn-detection",
    "audio",
    "ml",
    "onnx",
    "web-audio",
    "real-time"
  ],
  "author": "Utterance Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nizh0/Utterance.git"
  },
  "homepage": "https://utterance.dev",
  "bugs": {
    "url": "https://github.com/nizh0/Utterance/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.4.0",
    "serve": "^14.2.5",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "onnxruntime-web": "^1.20.0"
  }
}
